rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is participant
    function isParticipant(groupData) {
      return request.auth.uid in groupData.participants;
    }

    // Groups collection rules
    match /groups/{groupId} {
      // Allow reading if:
      // 1. User is a participant, OR
      // 2. User is authenticated (needed for invite flow to load group details)
      allow get: if isAuthenticated();

      // List queries require user to be participant
      allow list: if isAuthenticated() &&
                     isParticipant(resource.data);

      // Allow creating groups (user will be added as participant in the creation)
      allow create: if isAuthenticated() &&
                       request.auth.uid in request.resource.data.participants;

      // Allow updating if:
      // 1. User is already a participant, OR
      // 2. User is adding themselves via invite (not yet a participant)
      allow update: if isAuthenticated() &&
                       (isParticipant(resource.data) ||
                        request.auth.uid in request.resource.data.participants);

      // Allow deleting if user is the creator
      allow delete: if isAuthenticated() &&
                       request.auth.uid == resource.data.createdBy;
    }

    // Invite Links collection rules
    match /inviteLinks/{linkId} {
      // Anyone can read invite links (needed for validation before auth)
      allow read: if true;

      // Only authenticated users can create invite links
      allow create: if isAuthenticated() &&
                       request.auth.uid == request.resource.data.createdBy;

      // Allow updating (for incrementing usedCount)
      allow update: if true;

      // Only creator can delete
      allow delete: if isAuthenticated() &&
                       request.auth.uid == resource.data.createdBy;
    }

    // Messages collection rules
    match /messages/{messageId} {
      // Helper: Check if user is in the group
      function isGroupMember(groupId) {
        return isAuthenticated() &&
               request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.participants;
      }

      // Allow reading messages if user is in the group
      allow read: if isAuthenticated() &&
                     isGroupMember(resource.data.groupId);

      // Allow creating messages if:
      // 1. User is authenticated
      // 2. User is in the group
      // 3. senderId matches the authenticated user
      allow create: if isAuthenticated() &&
                       request.resource.data.senderId == request.auth.uid &&
                       isGroupMember(request.resource.data.groupId);

      // No updates or deletes allowed (messages are immutable)
      allow update, delete: if false;
    }

    // Users collection rules (for FCM tokens and profiles)
    match /users/{userId} {
      // Any authenticated user can read any user profile (for displaying names/avatars in groups)
      allow get: if isAuthenticated();

      // Users can create/update their own profile
      allow create, update: if isAuthenticated() && request.auth.uid == userId;

      // No deletes allowed
      allow delete: if false;
    }
  }
}
